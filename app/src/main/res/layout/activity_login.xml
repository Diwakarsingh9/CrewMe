<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/signinbg"
    tools:context="com.example.apporio6.crewme.LoginActivity"
    android:gravity="top|center"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="top|center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/imageView2"
            android:src="@drawable/logologin"
            android:layout_marginRight="50dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="50dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="top|center">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <EditText
                android:layout_width="@dimen/buttonwidth"
                android:layout_height="@dimen/buttonheight"
                android:id="@+id/email"
                android:background="@drawable/editboxdrw"
                android:layout_gravity="center"
                android:textColor="@android:color/white"
                android:inputType="textWebEmailAddress"
                android:singleLine="true"
                android:textCursorDrawable="@drawable/color_cursor"
                android:textColorHint="@color/grey"
                android:hint="E-mail"
                android:textSize="@dimen/textfillsize"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:gravity="left|center"
                android:textStyle="normal"
                android:layout_marginBottom="10dp" />

            <EditText
                android:layout_width="@dimen/buttonwidth"
                android:layout_height="@dimen/buttonheight"
                android:id="@+id/password"
                android:background="@drawable/editboxdrw"
                android:layout_gravity="center_horizontal"
                android:textColor="@android:color/white"
                android:singleLine="true"
                android:textCursorDrawable="@drawable/color_cursor"
                android:textColorHint="@color/grey"
                android:hint="Password"
                android:textSize="@dimen/textfillsize"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:gravity="left|center"
                android:inputType="textPassword"
                android:textStyle="normal"
                android:layout_marginBottom="20dp" />

            <ImageView
                android:layout_width="@dimen/buttonwidth"
                android:layout_height="@dimen/buttonheight"
                android:id="@+id/login"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/imageselctrlogin"
                android:layout_marginBottom="10dp"
                android:scaleType="fitXY" />

            <ImageView
                android:layout_width="@dimen/buttonwidth"
                android:layout_height="@dimen/buttonheight"
                android:id="@+id/signup"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/imageselsignup"
                android:layout_marginBottom="10dp"
                android:scaleType="fitXY" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="FORGOT YOUR PASSWORD?"
                android:id="@+id/frgt"
                android:textSize="12dp"
                android:textStyle="normal"
                android:textColor="@android:color/white"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="bottom|center"
        android:layout_marginBottom="10dp">

        <ImageView
            android:layout_width="@dimen/buttonwidth"
            android:layout_height="@dimen/buttonheight"
            android:id="@+id/imageView3"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/facebookbutton"
            android:layout_marginBottom="10dp"
            android:scaleType="fitXY" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="@dimen/buttonwidth"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/imageView4"
                android:layout_marginLeft="10dp"
                android:src="@drawable/lipsclosed" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WE WILL NEVER PUBLISH ANYTHING TO YOUR FACEBOOK PROFILE"
                android:id="@+id/sds"
                android:textSize="10dp"
                android:textStyle="normal"
                android:textColor="@color/grey"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp" />


        </LinearLayout>
    </LinearLayout>
</LinearLayout>
